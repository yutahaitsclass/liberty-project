      <div class="wrapper">
        <div class="news-section">
          <h2>NEWS</h2>
          <p class="subtitle">新着情報</p>

          <div class="news-content">
            <div class="news-content_part">
            <% @posts.first(3).each do |p|%>
              <div class="news-content_date">
                <%=p.date%>
              </div>
              <div class="news-content_text">
                <%=p.content%>
              </div>
              <%end%>    
            </div>
                  </div>


          <div class="news-content_image">
           
            <%= image_tag  "/crape-right.png" , :class=>"crape1" %>
          </div>
        </div>

        <div class="store-section" id="store">
